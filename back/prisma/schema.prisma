generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "sqlite"
}

model User {
  id        String   @id @default(cuid())
  name      String
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
}

model Category {
  id   Int    @id @default(autoincrement())
  name String @unique
  slug String @unique

  medications CategoryMedication[]
}

model Medication {
  id   Int    @id @default(autoincrement())
  name String

  categories    CategoryMedication[]
  forms         MedicationForm[]
  prescriptions Prescription[]
}

model Form {
  id         Int    @id @default(autoincrement())
  slug       String @unique
  name       String
  unit_label String

  medications   MedicationForm[]
  prescriptions Prescription[]
}

/**
 * ðŸ”— Category â†” Medication (N:N)
 */
model CategoryMedication {
  categoryId   Int
  medicationId Int

  category   Category   @relation(fields: [categoryId], references: [id])
  medication Medication @relation(fields: [medicationId], references: [id])

  @@id([categoryId, medicationId])
}

/**
 * ðŸ”— Medication â†” Form (N:N com controle)
 */
model MedicationForm {
  id Int @id @default(autoincrement())

  medicationId Int
  formId       Int

  medication Medication @relation(fields: [medicationId], references: [id])
  form       Form       @relation(fields: [formId], references: [id])

  isActive Boolean @default(true)

  @@unique([medicationId, formId])
}

/**
 * ðŸ“‹ PrescriÃ§Ãµes clÃ­nicas
 */
model Prescription {
  id Int @id @default(autoincrement())

  medicationId Int
  formId       Int

  medication Medication @relation(fields: [medicationId], references: [id])
  form       Form       @relation(fields: [formId], references: [id])

  dosage                Json
  frequency             Json
  frequency_unit        String
  quantity              Json
  quantity_unit         String
  pediatric_calculation String?
  duration_text         String?
}
